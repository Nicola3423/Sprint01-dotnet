@{
    Layout = "_Layout";
    ViewData["Title"] = "Página Inicial";
}

<div class="jumbotron text-center" style="background-color: #0062cc; color: #f8f9fa; padding: 40px; border-radius: 10px; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);">
    <h1 class="display-4" style="font-size: 2.5rem; font-weight: bold; margin-bottom: 15px;">Bem-vindo ao Sistema de Cadastro de Pacientes</h1>
    <p class="lead" style="font-size: 1.25rem; margin-bottom: 30px;">Gerencie seus pacientes de forma simples e rápida.</p>
    <a asp-controller="Paciente" asp-action="Create" class="btn btn-light btn-lg mx-2" style="color: #0062cc; font-weight: bold; padding: 10px 20px; border-radius: 5px; box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.15);">
        <i class="fas fa-user-plus"></i> Cadastrar Novo Paciente
    </a>
    <a asp-controller="Paciente" asp-action="Index" class="btn btn-light btn-lg mx-2" style="color: #0062cc; font-weight: bold; padding: 10px 20px; border-radius: 5px; box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.15);">
        <i class="fas fa-list"></i> Ver Pacientes
    </a>
</div>


@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script> 
}
