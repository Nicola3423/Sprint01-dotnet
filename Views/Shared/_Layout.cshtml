<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gerenciamento de Pacientes</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background-color: #0062cc; color: #ffffff; box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);">
            <a class="navbar-brand" href="/" style="color: #ffffff; font-weight: bold; font-size: 1.5rem;">Gerenciamento de Pacientes</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation" style="border-color: #ffffff;">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Paciente/Index" style="color: #ffffff;">Pacientes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Paciente/Create" style="color: #ffffff;">Cadastrar Paciente</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="mt-4 text-center" style="background-color: #0062cc; color: #ffffff; padding: 10px; border-top: 2px solid #004a99;">
        <p>&copy; 2024 - Sistema de Gerenciamento de Pacientes</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
